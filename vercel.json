{
  "version": 2,
  "buildCommand": "npm install --prefix client && npm install --prefix server && cd client && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "echo 'Dependencies installed in buildCommand'",
  "functions": {
    "server/api/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/api/index.js"
    }
  ]
}
