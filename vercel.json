{
  "version": 2,
  "buildCommand": "npm install && npm run build --workspace=client && cp -r client/dist dist",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "server/api/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/api/index.js"
    }
  ]
}
